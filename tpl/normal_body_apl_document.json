{
    "description": "Normal body document with title, two texts, hints and background image",
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeTitle": 50,
                "textSizePrimary": 36,
                "textSizeSecondary": 24
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 20
            }
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color",
            "values": {
                "color": "@colorTextPrimary"
            }
        },
        "textStyleNormal": {
            "description": "Normal version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "normal"
            }
        },
        "textStyleBold": {
            "description": "Bold version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "bold"
            }
        },
        "mixinTitle": {
            "values": {
                "fontSize": "@textSizeTitle"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStyleTitle": {
            "extend": [
                "textStyleBold",
                "mixinTitle"
            ]
        },
        "textStylePrimary": {
            "extend": [
                "textStyleNormal",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleNormal",
                "mixinSecondary"
            ]
        }
    },
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "height": "100vh",
                "items": [
                    {
                        "when": "${@viewportProfile == @hubRoundSmall}",
                        "type": "Image",
                        "source": "${payload.content.imageContent.smallBackgroundImage}",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh",
                        "position": "absolute"
                    },
                    {
                        "when": "${@viewportProfile == @hubLandscapeLarge}",
                        "type": "Image",
                        "source": "${payload.content.imageContent.largeBackgroundImage}",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh",
                        "position": "absolute"
                    },
                    {
                        "when": "${@viewportProfile == @tvLandscapeXLarge}",
                        "type": "Image",
                        "source": "${payload.content.imageContent.extraLargeBackgroundImage}",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh",
                        "position": "absolute"
                    },
                    {
                        "when": "${@viewportProfile != @hubRoundSmall && @viewportProfile != @hubLandscapeLarge && @viewportProfile != @tvLandscapeXLarge}",
                        "type": "Image",
                        "source": "${payload.content.imageContent.mediumBackgroundImage}",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh",
                        "position": "absolute"
                    },
                    {
                        "type": "AlexaHeader",
                        "headerAttributionImage": "${payload.content.imageContent.logoIcon}"
                    },
                    {
                        "type": "Container",
                        "justifyContent": "${viewport.shape == 'round' ? 'center' : 'end'}",
                        "grow": 1,
                        "items": [
                            {
                                "type": "Text",
                                "style": "${viewport.shape == 'round' ? 'textStylePrimary' : 'textStyleTitle'}",
                                "paddingLeft": "@marginLeft",
                                "paddingRight": "@marginRight",
                                "paddingBottom": "@marginBottom",
                                "textAlign": "${viewport.shape == 'round' ? 'center' : 'left'}",
                                "text": "${payload.content.textContent.title}"
                            },
                            {
                                "type": "Text",
                                "style": "${viewport.shape == 'round' ? 'textStyleSecondary' : 'textStylePrimary'}",
                                "paddingLeft": "@marginLeft",
                                "paddingRight": "@marginRight",
                                "paddingBottom": "@marginBottom",
                                "textAlign": "${viewport.shape == 'round' ? 'center' : 'left'}",
                                "text": "${payload.content.textContent.primaryText}"
                            },
                            {
                                "when": "${viewport.shape != 'round'}",
                                "type": "Text",
                                "style": "textStyleSecondary",
                                "paddingLeft": "@marginLeft",
                                "paddingRight": "@marginRight",
                                "textAlign": "${viewport.shape == 'round' ? 'center' : 'left'}",
                                "text": "${payload.content.textContent.secondaryText}"
                            }
                        ]
                    },
                    {
                        "when": "${viewport.shape != 'round'}",
                        "type": "AlexaFooter",
                        "footerHint": "${payload.content.textContent.hintText}"
                    }
                ]
            }
        ]
    }
}